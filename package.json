{
    "name": "jutge-vscode",
    "displayName": "jutge-vscode",
    "publisher": "jutge",
    "description": "Visual Studio Code extension for Jutge.org",
    "version": "0.0.2",
    "repository": "https://github.com/jutge-org/jutge-vscode",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsWelcome": [
            {
                "view": "jutgeTreeView",
                "contents": "You have not signed in to jutge.org yet.\n[Sign-in to jutge.org](command:jutge-vscode.signIn)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "jutge",
                    "title": "Jutge.org",
                    "icon": "resources/jutge-icon.svg"
                }
            ]
        },
        "views": {
            "jutge": [
                {
                    "id": "jutgeTreeView",
                    "name": "Problem Lists",
                    "contextualTitle": "Jutge.org"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "jutge-vscode.refreshTree",
                    "when": "view == jutgeTreeView",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "jutge-vscode.showProblem",
                "title": "Jutge - Show Problem"
            },
            {
                "command": "jutge-vscode.signIn",
                "title": "Jutge - Sign In"
            },
            {
                "command": "jutge-vscode.signOut",
                "title": "Jutge - Sign Out"
            },
            {
                "command": "jutge-vscode.refreshTree",
                "title": "Jutge - Refresh Tree",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "configuration": {
            "title": "Jutge.org",
            "properties": {
                "jutge-vscode.runner.python.flags": {
                    "type": "array",
                    "default": [
                        "-u"
                    ],
                    "description": "The flags to run Python scripts (by default, the flags jutge.org uses)"
                },
                "jutge-vscode.runner.cpp.command": {
                    "type": "string",
                    "default": "g++",
                    "description": "The command to compile C++ programs"
                },
                "jutge-vscode.runner.cpp.flags": {
                    "type": "array",
                    "default": [
                        "-std=c++17",
                        "-O2",
                        "-Wall",
                        "-Wextra",
                        "-Wshadow",
                        "-pedantic"
                    ],
                    "description": "The flags to compile C++ programs (by default, the flags jutge.org uses)"
                },
                "jutge-vscode.problem.preferredLang": {
                    "type": "string",
                    "default": "Català",
                    "enum": [
                        "Català",
                        "Castellano",
                        "English"
                    ],
                    "description": "The preferred language for problem descriptions."
                }
            }
        }
    },
    "scripts": {
        "generate-client": "openapi-ts",
        "compile": "openapi-ts && node ./esbuild.js",
        "watch": "node ./esbuild.js --watch",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "test": "vscode-test",
        "lint": "eslint src --ext ts",
        "clean": "rm -rf out dist",
        "prepare": "husky install",
        "format": "prettier --write *",
        "package": "NODE_ENV=production node ./esbuild.js",
        "vscode:prepublish": "npm run package",
        "vscode:package": "vsce package"
    },
    "devDependencies": {
        "@hey-api/openapi-ts": "^0.42.1",
        "@types/mocha": "^10.0.6",
        "@types/moxios": "^0.4.17",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@types/vscode-webview": "^1.57.5",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "@vscode/vsce": "^2.26.1",
        "esbuild": "^0.16.17",
        "eslint": "^8.56.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "moxios": "^0.4.0",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "@vscode/python-extension": "^1.0.5",
        "axios": "^1.6.7"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*": "prettier --write --ignore-unknown"
    },
    "extensionDependencies": [
        "ms-python.python"
    ]
}
